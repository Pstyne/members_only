<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div class="danger">
      This form contains <%= pluralize(@user.errors.count, "error")%>
    </div>
    <div class="danger">
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :email %>
  <%= f.email_field :email %>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>
  <%= f.submit "Submit", class: "button" %>
<% end %>